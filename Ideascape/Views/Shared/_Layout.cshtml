@using Ideascape.Bootstrap.Html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title &ndash; Ideascape</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Byteflag Ltd">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="/">Ideascape</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            @Html.MenuLink("Timeline", "Timeline", "Home")
                            @Html.MenuLink("New Idea", "NewIdea", "Home")
                            @Html.MenuLink("My Ideas", "MyIdeas", "Home")
                            @Html.MenuLink("Trending", "Trending", "Home")
                        </ul>
                        <ul class="nav pull-right">
                            <li class="divider-vertical"></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-user"></i>
                                    Joe Bloggs
                                        @*@Context.User.Identity.Name.ToLowerInvariant()*@
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Change password", "ChangePassword", "Account")</li>
                                    <li class="divider"></li>
                                    <li><a data-toggle="modal" href="#Modal_SignOutConfirmation">Sign out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <section>
            @RenderBody()
        </section>
    </div>

    <div style="height: 60px"></div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
