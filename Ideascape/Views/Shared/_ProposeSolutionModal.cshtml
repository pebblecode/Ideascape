@using Ideascape.Data.Entities
@model Ideascape.Models.ProposeSolution

@{
    var idea = (Idea)ViewData["idea"];
    Model.IdeaId = idea.Id;
}

<div id="modal-propose-alt-solution-@idea.Id" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 id="myModalLabel">Propose alternate solution</h4>
    </div>
    @using (Html.BeginForm("ProposeSolution", "Home"))
    {
        <div class="modal-body">
            <p>Enter your proposed solution for <strong><em>@idea.Name</em></strong></p>
            @Html.HiddenFor(x => x.IdeaId)
            <div class="control-group">
                <div class="controls">
                    @Html.TextAreaFor(m => m.Solution, new { style = "width: 98%; height: 15em;" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Having second thoughts</button>
            <button type="submit" class="btn btn-success">Propose solution</button>
        </div>
    }
</div>
