@using Ideascape.Data
@{
    ViewBag.Title = "Home";

    var rnd = new Random();
    ViewBag.Random = rnd;
    ViewBag.IdeaClasStyle = "span8";
}

<h3>Welcome back to Ideascape!</h3>
<div class="well" style="margin-bottom: 5em;">
    <p>Ideascape is your workflow platform for conceiving, iterating, sharing and kickstarting brand new ideas.</p>
    <blockquote><strong><em>Have brilliant ideas, and go forth!</em></strong></blockquote>
</div>
<h4>Hot ideas, straight off the press!</h4>
<div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        <div class="item active">
            <div style="">
                @Html.Partial("_Idea", IdeaDataStore.Instance.Items.ElementAt(0))
            </div>
        </div>
        <div class="item">
            <div style="">
                @Html.Partial("_Idea", IdeaDataStore.Instance.Items.ElementAt(1))
            </div>
        </div>
        <div class="item">
            <div style="">
                @Html.Partial("_Idea", IdeaDataStore.Instance.Items.ElementAt(2))
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $('.carousel').carousel({
            interval: 2000
        })
    </script>
}