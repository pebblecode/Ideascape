@using Ideascape.Data
@using Ideascape.Infrastructure
@{
    ViewBag.Title = "My Ideas";
}

@{ var ideas = new IdeaDataStore().Items; }
@foreach (var ideaRow in ideas.Split())
{
    <div class="row-fluid">
        @foreach (var idea in ideaRow)
        {
            <div class="span4" style="padding: 1em">
                <div class="pull-right"><span class="label @idea.Stage.ToBootstrapLabelClass()">@((int)idea.Stage + 1). @idea.Stage</span></div>
                <h4>@idea.Name</h4>

                <div class="row-fluid" style="background-color: #fff9f9; border-radius: 7px;">
                    <div class="span1" style="margin-left: 7px;background-color: #fff9f9">
                        <i class="icon-question-sign" style="background-color: #fff9f9"></i>
                    </div>
                    <div style="margin-left: 0;background-color: #fff9f9" class="span11"><p>@idea.Premise</p></div>
                </div>
                
                <div class="row-fluid"  style="background-color: #f9fff9;border-radius: 7px; margin-top: 7px">
                    <div class="span1" style="margin-left: 7px;background-color: #f9fff9">
                        <i class="icon-lightbulb" style="background-color: #f9fff9"></i>
                    </div>
                    <div style="margin-left: 0;background-color: #f9fff9" class="span11"><p>@idea.Solution</p></div>
                </div>
                
                @foreach (var tag in idea.Tags)
                {
                    <span class="label">@tag</span>
                }
            </div>
        }
    </div>
}