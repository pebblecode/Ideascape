@using Ideascape.Data
@using Ideascape.Data.Entities
@using Ideascape.Infrastructure
@{
    ViewBag.Title = "My Ideas";
}

@{ var ideas = new IdeaDataStore().Items; }
@foreach (var ideaRow in ideas.Split())
{
    <div class="row-fluid">
        @foreach (var idea in ideaRow)
        {
            <div class="span4" style="padding: 1em">
                <div class="pull-right"><span class="label @idea.Stage.ToBootstrapLabelClass()">@((int)idea.Stage + 1). @idea.Stage</span></div>
                <h4>@idea.Name</h4>

                <div class="row-fluid" style="background-color: #ffecec">
                    <div class="span1" style="height:100%;font-size: 18pt; text-align: center; vertical-align: middle;"><i class="icon-question-sign"></i></div>
                    <div class="span11"><p>@idea.Premise</p></div>
                </div>
                
                <div class="row-fluid" style="background-color: #e3fbe9">
                    <div class="span1"><i class="icon-lightbulb"></i></div>
                    <div class="span11"><p>@idea.Solution</p></div>
                </div>

                @foreach (var tag in idea.Tags)
                {
                    <span class="label">@tag</span>
                }
            </div>
        }
    </div>
}